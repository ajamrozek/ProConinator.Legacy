@model ProConinator.Web.Models.TopicLiModel
<ul class="@Model.NgRepeatItem">

    <li ng-repeat="@Model.NgRepeatItem in @Model.NgRepeatItems" >
        <div class="commands">
            <button class="btn btn-default btn-xs" ng-click="removeProCon(topic, @(Model.NgRepeatItem).Id)" ng-show="!@(Model.formName).$visible"><span class="glyphicon glyphicon-trash"></span></button>
            <button class="btn btn-default btn-xs" ng-click="@(Model.formName).$show()" ng-show="!@(Model.formName).$visible"><span class="glyphicon glyphicon-edit "></span></button>
        </div>
        <p ng-show="!@(Model.formName).$visible">
            {{@(Model.NgRepeatItem).Text}}
            {{@(Model.NgRepeatItem).Weight}}
        </p>
        <form editable-form name="@Model.formName" ng-show="@(Model.formName).$visible" class="form-buttons form-inline" ng-submit="saveGroup();@(Model.formName).$hide();">
            <div class="inputRow" ng-show="@(Model.formName).$visible">
                <input type="text" ng-model="@(Model.NgRepeatItem).Text" />
                <weight class="weightSelect" btnclass="btn-xs" min="1" max="10" ng-model="@(Model.NgRepeatItem).Weight" value="@(Model.NgRepeatItem).Weight"></weight>
            </div>
            <div class="editRowCommand">
                <button type="button" class="btn btn-default btn-xs" ng-disabled="@(Model.formName).$waiting" ng-click="@(Model.formName).$cancel()">
                    <span class="glyphicon glyphicon-remove-circle "></span>
                </button>
                <button type="submit" class="btn btn-default btn-xs" ng-disabled="@(Model.formName).$waiting">
                    <span class="glyphicon glyphicon-floppy-disk "></span>
                </button>
            </div>
        </form>
    </li>
</ul>